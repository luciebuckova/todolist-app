<%- include ('partials/header.ejs') %>
<div
  class="flex md:items-center justify-center h-screen bg-gradient-to-b from-blue-900 via-cyan-700 to-teal-500">
  <div
    class="h-fit md:h-5/6 text-white text-center p-8 md:px-16 md:py-32 my-16 w-11/12 max-w-screen-lg">
    <h1
      class="text-2xl md:text-6xl font-semibold mt-8 md:mt-0 mb-12 md:mb-24 text-slate-300">
      Edit Your Task ğŸ–ï¸
    </h1>
    <form class="flex gap-5" action="/update" method="POST">
      <input
        class="bg-white/25 p-2 rounded-xl placeholder:text-slate-300 w-full"
        type="text"
        name="editedTask"
        id="editedTask"
        value="<%= tasks[task] %>" />
